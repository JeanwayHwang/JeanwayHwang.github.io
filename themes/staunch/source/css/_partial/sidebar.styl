.sidebar
    position: fixed
    height: 100%
    width: 28%
    overflow: hidden

.mask-black,
#sidebar-bg
    width: 100%
    height: 100%

.mask-black
    position: absolute
    left: 0
    top: 0
    background-color: rgba(0,0,0,.2)
    z-index: 99

#sidebar-bg
    position: relative
    background-repeat: repeat, no-repeat
    background-position: center
    background-size: cover
    transition: background-image 2s ease-in-out
    will-change: transition

.background-n1
    background-image: url(/images/backgrounds/01.jpg)

.background-n2
    background-image: url(/images/backgrounds/02.jpg)

.background-n3
    background-image: url(/images/backgrounds/03.jpg)

.background-n4
    background-image: url(/images/backgrounds/04.jpg)

.background-n5
    background-image: url(/images/backgrounds/05.jpg)

.background-n6
    background-image: url(/images/backgrounds/06.jpg)

.nav-wrap
    position: relative
    z-index: 999
    width: 46px
    height: 100%
    background-color: #2a2a2a
    transition: all .3s
    box-shadow: 6px 2px 7px 0 rgba(0,0,0,.32)

    a
        display: flex
        align-items: center
        height: 46px
        font-size: 1.6rem
        line-height: 46px
        color: #fff
        .iconfont
            position: relative
            z-index: 99
            text-align: center
            width: 46px
            height: 46px
            background-color: #2a2a2a

        span
            position: absolute
            transform: translateX(-300px)
            opacity: 0
            margin-left: 56px
            transition: transform .5s, opacity .2s
            text-transform: uppercase

        &:hover
            background-color: #ea4334
            .iconfont
                background-color: #ea4334
    
    a:first-child
        font-size: 1.8rem

.nav-wrap.show
    width: 200px
    a
        span
            opacity: 1
            transform: translateX(0)
    
    #nav-btn
        .iconfont
            z-index: -1
        
        &:after
            z-index: 99

#nav-btn
    &:after
        content: '\e690'
        position: absolute
        left: 14px
        font-family: 'iconfont'

#nav-btn,
#nav-btn .iconfont
    background-color: #ea4334

.author-info
    position: absolute
    left: 46px
    bottom: 0
    z-index: 998
    text-align: center
    padding: 30px
    color: #fff
    img
        width: 100px
        height: 100px
        border-radius: 50%
    
    h2
        margin: 0
        font-size: 2.4rem
        font-weight: 700
        text-transform: uppercase
        letter-spacing: -1px
    
    span
        font-size: 1.4rem