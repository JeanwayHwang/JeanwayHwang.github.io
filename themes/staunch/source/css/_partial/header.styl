.header
    height: 50px
    border-bottom: 2px solid #d9d9d9
    font-size: 1.6rem
    a
        display: inline-block
        line-height: 1
        color: #555

.page-tit > a
    padding: 16px
    font-weight: 400
    border-bottom: 2px solid #555

.header-other > div
    display: inline-block

.social
    > a
        text-align: center
        padding: 16px 10px
        &:hover
           border-bottom: 2px solid #555

.system
    margin-left: 30px
    > a
        font-size: 2rem
        margin-left: 14px

.header a.smaller-btn
    display: none

.rss-btn,
.expand-btn,
.smaller-btn
    transition: color .5s

.rss-btn:hover
    color: #fd9b00

.expand-btn,
.smaller-btn
    &:hover
        color: #4586f3