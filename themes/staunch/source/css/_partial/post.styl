.post-wrap
    > header
        margin-bottom: 30px
        > h1
            margin-bottom: 6px
            font-size: 3.4rem
            font-weight: bold
            color: #333
        
        > span
            font-size: 1.4rem
            color: #888
            font-family: -apple-system, BlinkMacSystemFont, walsheim, "Noto Serif SC", serif

.post-content
    -ms-text-size-adjust: 100%
    -webkit-text-size-adjust: 100%
    font-family: -apple-system, BlinkMacSystemFont, walsheim, "Noto Serif SC", serif
    font-size: 1.6rem
    color: #24292e
    word-wrap: break-word
    margin-top: 4rem
    p
        margin-bottom: 10px
        margin-top: 0
        line-height: 1.725
    
    h1, h2, h3, h4, h5, h6
        font-weight: 600
        line-height: 1.25
        margin-bottom: 16px
        margin-top: 40px
    
    h1, h2
        border-bottom: 1px solid #eaecef
        padding-bottom: .3em
    
    h1
        font-size: 2em
    
    h2
        font-size: 1.5em
    
    h3
        font-size: 1.25em
    
    h4
        font-size: 1em
    
    h5
        font-size: .875em
    
    h6
        color: #6a737d
        font-size: .875em

    strong
        font-weight: bold
    
    img
        display: inline-block
        border: 0
    
    code,
    pre,
    kbd
        font-family: SFMono-Regular,Consolas,Liberation Mono,Menlo,Courier,monospace
        font-size: 1.4rem
    
    a
        color: #ea4334
        border-bottom: 1px dotted #ea4334
    
    hr
        background: transparent
        border: 0
        border-bottom: 1px solid #dfe2e5
        height: 0
        margin: 15px 0
        overflow: hidden
    
    table
        border-collapse: collapse
        border-spacing: 0
    
    td, th
        padding: 0
    
    blockquote
        margin: 0
    
    ol, 
    ul,
    ol ol,
    ol ul,
    ul ol,
    ul ul
        margin-bottom: 0
        margin-top: 0
    
    ol ol,
    ul ol
        list-style-type: lower-roman
    
    ol ol ol,
    ol ul ol,
    ul ol ol,
    ul ul ol
        list-style-type: lower-alpha
    
    dd
        margin-left: 0
    
    pre
        margin-top: 0
        margin-bottom: 0
    
    >:first-child
        margin-top: 0 !important
    
    >:last-child
        margin-bottom: 0 !important
    
    blockquote,
    dl,
    ol,
    p,
    pre,
    table,
    ul
        margin-bottom: 10px
        margin-top: 0
    
    blockquote
        border-left: .25em solid #dfe2e5
        color: #6a737d
        padding: 0 1em
    
    kbd
        background-color: #fafbfc
        border: 1px solid #c6cbd1
        border-bottom-color: #959da5
        border-radius: 3px
        box-shadow: inset 0 -1px 0 #959da5
        color: #444d56
        display: inline-block
        font-size: 1.2rem
        line-height: 10px
        padding: 3px 5px
        vertical-align: middle
    
    li
        word-wrap: break-all
        > p
            margin-top: 16px
        
        +li
            margin-top: .25em
        
        dl
            padding: 0
            dt
                font-style: italic
                font-weight: 600
                margin-top: 16px
                padding: 0
            
            dd
                margin-bottom: 16px
                padding: 0 16px
    
    table
        display: block
        overflow: auto
        width: 100%
        th
            font-weight: 600
    
        td,
        th
            border: 1px solid #dfe2e5
            padding: 6px 13px
        
        tr:nth-child(2n)
            background-color: #eef7fa
    
    figure
        margin: 16px 0
        border-radius: 3px
    
    ol,
    ul
        padding-left: 2em
    
    .highlight
        pre,
        table
            margin-bottom: 0
        
        tr,
        td
            border: 0
        
        td
            padding: 0
        
        pre
            padding-left: 10px
            padding-right: 10px
            font-family: SFMono-Regular,Consolas,Liberation Mono,Menlo,Courier,monospace
    
    code
        background-color: rgba(27,31,35,.05)
        border-radius: 3px
        margin: 0
        padding: .2em .4em
    
    .highlight,
    pre
        display: block
        overflow-x: auto
        background: #f6f6f6
        color: #adb0b9
    
    .gutter
        pre
            min-width: 38px
            text-align: right
            color: #869194
            padding: 10px
            background-color: #eef0f6
    
    figcaption
        margin: 0
        padding: .5em
        background-color: #eee
        color: #4d4d4c
        line-height: 1
        border-bottom: 1px solid #e9e9e9
    
    .comment,
    .quote,
    .variable
        color: #008000
    
    .keyword,
    .selector-tag,
    .built_in,
    .name,
    .tag
        color: #00f
    
    .string,
    .title,
    .section,
    .attribute,
    .literal,
    .template-tag,
    .template-variable,
    .type
        color: #a31515
    
    .deletion,
    .selector-attr,
    .selector-pseudo,
    .meta
        color: #2b91af
    
    .doctag
        color: #808080
    
    .attr
        color: #f00
    
    .subst
        color: #519f50
    
    .tag,
    .name
        color: #e8bf6a
    
    .type
        color: #da4939
    
    .doctag
        color: #808080
    
    .symbol,
    .bullet,
    .built_in,
    .builtin-name,
    .attr,
    .link
        color: #00b0e8
    
    .params
        color: #d0d0ff
    
    .attribute
        color: #cda869
    
    .meta
        color: #9b859d

    .title
    .section
        color: #ffc66d
    
    .addition
        background-color: #e6ffed
        color: #333
        display: inline-block
        width: 100%
    
    .deletion
        background-color: #ffeef0
        color: #333
        display: inline-block
        width: 100%
    
    .selector-class
        color: #9b703f

    .selector-id
        color: #8b98ab

    .emphasis
        font-style: italic

    strong
        font-weight: bold

    .link
        text-decoration: underline

.post-footer
    margin-top: 60px
    .updated
        text-align: left
    .line
        position: relative
        margin: 50px 0
        width: 100%
        height: 1px
        background-color: #ddd
        &:after
            content: ''
            position: absolute
            display: block
            left: 70%
            top: 50%
            transform: translate(0, -50%)
            width: 80px
            height: 60px
            background: url(/images/end.png) no-repeat
            background-size: cover
            background-color: #fafbff

        .post-tags
            position: absolute
            top: -30px
            a
                margin-right: 6px
                font-size: 1.6rem
                color: #ea4334
    
.reward
    text-align: center
    font-size: 1.6rem
    > a
        padding: 6px 20px
        border-radius: 3px
        color: #fff
        background: #ea4334
        transition: opacity .3s ease
        &:hover
            opacity: .3
    
    .mask
        visibility: hidden
        position: fixed
        top: 0
        left: 0
        bottom: 0
        z-index: 99
        width: 100%
        height: 100%
        background: #000
        opacity: 0
        pointer-events: none
        transition: 0.3s ease-in-out

    .mask.in
        visibility: visible
        pointer-events: auto
        opacity: .3

.reward-lay
    position: fixed
    top: 50%
    left: 50%
    z-index: 120
    padding: 30px
    text-align: center
    color: #727272
    background-color: #fff
    border-radius: 4px
    box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16), 0 2px 10px 0 rgba(0,0,0,0.12)
    opacity: 0
    transform: translate(-50%, -200%)
    .close
        position: absolute
        right: 10px
        top: 5px
        color: rgba(0,0,0,.2)
        font-size: 3.4rem
        font-weight: bold
        line-height: 20px

.reward-title
    position: relative
    width: 100%
    text-align: center
    font-size: 1.8rem
    line-height: 24px

.reward-content
    margin-top: 20px

.reward-code
    margin: 0 auto
    width: 200px

.reward-select
    width: 100%
    .reward-select-item
        margin: 20px 5px 10px
        width: 156px
        height: 56px
        line-height: 50px
        text-align: center
        border: 1px solid #e6e6e6
        border-radius: 4px
        cursor: pointer
        .reward-select-item-wechat
            min-width: 112px
            height: 30px
        img
            vertical-align: middle
            display: inline-block
        .reward-select-item-alipay
            min-width: 85px
            height: 30px
    label
        display: inline-block
        max-width: 100%
        font-weight: 700
    .checked
        color: #ea4334
        border-color: #ea4334

.reward-lay.ready
    visibility: hidden
    display: block
    transition: all .3s ease-in-out

.reward-lay.in
    visibility: visible
    opacity: 1
    transform: translate(-50%, -50%)

.post-nav
    margin: 50px 0
    font-size: 1.6rem
    a
        color: #ea4334
        &:hover
            text-decoration: underline