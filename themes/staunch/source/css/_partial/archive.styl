.archive-wrap
    padding: 30px 0

.archive-year
    display: flex
    align-items: center
    justify-content: space-between
    margin: 0
    padding-bottom: 10px
    font-size: 3rem
    font-weight: 700
    border-bottom: 1px solid #ddd

.archive-month
    padding-top: 20px
    padding-left: 2em
    font-size: 2rem
    font-weight: 600
    line-height: 60px

.archive-post-item
    position: relative
    margin-left: 2em
    padding-left: 2em
    color: #414141
    line-height: 34px
    font-size: 1.6rem
    .archive-tit
        color: #414141
        &:hover
            text-decoration: underline
    
    &:before
        content: '\e63e'
        position: absolute
        top: 0
        left: 14px
        font-family: iconfont
        font-size: 8px